data node {
  node next;
}.

// touching list segment..
pred lseg<p,n> == self=p & n=0
  or self::node<q>*q::lseg<p,n-1> 
  inv n>=0.

pred ns<p,n> == self=p & n=0
  or self::node<q>*q::ns<p,n-1> & self!=p 
  inv n>=0.

lemma_test
  self::lseg<p,n> 
  <-> self::ns<p,n>.

lemma_test
  self::ns<p,n> <->
  self::lseg<p,n>.

lemma_test
  self::lseg<p,n> 
  <- 
  self::ns<p,n>
  .
// valid

lemma_test
  self::lseg<p,n>
  -> 
  self::ns<p,n>
  .
//fail

lemma_test
  self::ns<p,n>
  -> 
  self::lseg<p,n>
  .
//valid

lemma_test
  self::ns<p,n>
  <-
  self::lseg<p,n>
  .
// sound with rhs unfold
