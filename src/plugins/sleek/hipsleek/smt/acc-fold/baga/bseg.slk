
data node {
     node next;
}.

pred bsll<y> ==
     self = y
     or (exists u: self::bsll<u> * u::node<y>).

pred b1<y> ==
     (self:node) = y
     or (exists u: self::b1<u> * u::node<y>).

pred b2<y> ==
     self = y
     or (exists u: self::node<u> * u::b2<u>).

