data arr {
  int val;
}.

pred arr_seg<i:int,n:int> ==
  emp & i=n & n>=0
  or x::arr<_> * self::arr_seg<i+1,n> & x=self+i & 0<=i<n
  inv n>=i & i>=0.

//(4)
checkentail x::arr_seg<i,n> & n-i>=2 & y=x+i & z=x+i+1 
   |- y::arr<_> //* z::arr<_>
  .
print residue.
expect Valid.

checkentail x::arr_seg<i,n> & n-i>=3 & y=x+i & z=y+2
   |- y::arr<_> * z::arr<_>.
print residue.
expect Fail.
// weak

